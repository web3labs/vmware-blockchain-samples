apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    run: ingestion
  name: ingestion
spec:
  replicas: 1
  selector:
    matchLabels:
      run: ingestion
  strategy: {}
  template:
    metadata:
      labels:
        run: ingestion
    spec:
      containers:
        - env:
            - name: MONGO_CLIENT_URI
              value: mongodb://IP:27017
            - name: MONGO_DB_NAME
              value: epirus
            - name: NODE_ENDPOINT
              value: NODEENDPOINT 
          image: web3labs/epirus-free-ingestion:latest
          name: ingestion
          resources: {}
      restartPolicy: Always
